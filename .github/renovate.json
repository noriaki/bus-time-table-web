{
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":pinAllExceptPeerDependencies"
  ],
  "timezone": "Asia/Tokyo",
  "assignees": ["noriaki"],
  "schedule": ["every weekend"],
  "labels": ["update-dependencies"],
  "bumpVersion": "patch",
  "node": {
    "enabled": false
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "groupName": "all patch dependencies",
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "eslint packages",
      "packagePatterns": ["^babel-eslint", "^eslint"]
    }
  ]
}
